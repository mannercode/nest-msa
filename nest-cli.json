{
    "$schema": "https://json.schemastore.org/nest-cli",
    "collection": "@nestjs/schematics",
    "compilerOptions": {
        "deleteOutDir": true,
        "webpack": false
    },
    "monorepo": true,
    "projects": {
        "gateway": {
            "type": "application",
            "root": "src/apps/gateway",
            "entryFile": "development",
            "sourceRoot": "src/apps/gateway"
        },
        "services": {
            "type": "application",
            "root": "src/apps/services",
            "entryFile": "development",
            "sourceRoot": "src/apps/services"
        }
    }
}
