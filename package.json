{
    "name": "nest-seed",
    "version": "0.0.1",
    "private": true,
    "scripts": {
        "start": "node _output/dist/${APP_NAME}/index.js",
        "build": "echo APP_NAME=${APP_NAME} && nest build ${APP_NAME} -b webpack",
        "lint": "prettier --write 'src/**/*.ts' && eslint src",
        "infra": "bash scripts/run-infra.sh && bash scripts/reset-output.sh",
        "watch:app": "nest start ${APP_NAME} --watch --debug ${DEBUG_PORT}",
        "watch:test": "npm run infra && node --inspect=9330 -r ts-node/register ./node_modules/.bin/jest --watch --onlyChanged",
        "test:base": "npm run infra && jest --coverage --config ./configs/jest.config.${TEST_NAME}.ts",
        "test:100x": "bash -c 'for i in {1..100}; do npm run test:base || { echo \"Test failed at iteration $i\"; exit 1; }; done'"
    },
    "comments": {
        "TODO": "chalk,nanoid 등 esm은 node에서 사용 가능하나 jest는 아직이다. node 24에서 jest 다시 점검해라",
        "APP_NAMES": "applications cores gateway infrastructures",
        "TEST_NAMES": "all apps common",
        "TODO2": "npm install express@^5.0.1"
    },
