{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "incremental": true,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "strictBindCallApply": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "target": "ES2021",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "outDir": "./_output/build",
        "baseUrl": ".",
        "paths": {
            "common": [
                "libs/common/src/index"
            ],
            "testlib": [
                "libs/testlib/index"
            ],
            "types": [
                "libs/types/index"
            ],
            "proxy": [
                "libs/proxy/index"
            ],
            "config": [
                "libs/config/index"
            ],
            "services/*": [
                "apps/services/src/*"
            ],
            "gateway/*": [
                "apps/gateway/src/*"
            ]
        }
    },
    "include": [
        "libs/**/*",
        "apps/**/*"
    ],
    "exclude": [
        "apps/**/jest.config.ts",
    ]
}
