{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "incremental": true,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "strictBindCallApply": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "target": "ES2021",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "outDir": "./_output/build",
        "baseUrl": ".",
        "paths": {
            "common": [
                "libs/common/index"
            ],
            "testlib": [
                "libs/testlib/index"
            ],
            "types": [
                "libs/@types/index"
            ],
            "services": [
                "libs/services/index"
            ],
            "config": [
                "libs/config/index"
            ]
        }
    },
    "include": [
        "libs/**/*",
        "apps/**/src/**/*"
    ]
}
