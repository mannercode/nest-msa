{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "incremental": true,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "strictBindCallApply": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "target": "ES2021",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "baseUrl": ".",
        "outDir": "./_output/build",
        "paths": {
            "common": [
                "src/libs/common/index"
            ],
            "testlib": [
                "src/libs/testlib/index"
            ],
            "types": [
                "src/shared/types/index"
            ],
            "proxy": [
                "src/shared/proxy/index"
            ],
            "config": [
                "src/shared/config/index"
            ],
            "services/*": [
                "src/apps/services/*"
            ],
            "gateway/*": [
                "src/apps/gateway/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}
