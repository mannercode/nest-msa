{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "incremental": true,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "strictBindCallApply": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "target": "ES2021",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "baseUrl": ".",
        "outDir": "./_output/build",
        "paths": {
            "common": [
                "src/libs/common/index"
            ],
            "testlib": [
                "src/libs/testlib/index"
            ],
            "proxy": [
                "src/shared/proxy/index"
            ],
            "shared/*": [
                "src/shared/*"
            ],
            "gateway": [
                "src/apps/gateway/index"
            ],
            "services": [
                "src/apps/services/index"
            ],
            "applications": [
                "src/apps/services/applications/index"
            ],
            "cores": [
                "src/apps/services/cores/index"
            ],
            "infrastructures": [
                "src/apps/services/infrastructures/index"
            ],
        }
    },
    "include": [
        "src/**/*"
    ]
}
